<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="MainActivity">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/board_IMG_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="3dp"
        android:orientation="vertical"
        android:weightSum="6"/>

    <GridLayout
        android:id="@+id/game_layout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/btm_Layout"
        android:layout_below="@+id/hearts_layout"
        android:columnCount="3"
        android:orientation="horizontal"
        android:rowCount="6">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_test1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/stone" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_test2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/stone" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_test3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/stone" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_test4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/stone" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_test5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/stone" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_test6"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/stone" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_test7"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/stone" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_test8"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/stone" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_test9"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/stone" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_test10"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/stone" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_test11"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/stone" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_test12"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/stone" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_test13"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/stone" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_test14"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/stone" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_test15"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/stone" />
    </GridLayout>

    <LinearLayout
        android:id="@+id/student_layout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_above="@+id/btm_Layout"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/car_1st_lane"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:visibility="invisible"
            app:srcCompat="@drawable/car" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/car_2nd_lane"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/car" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/car_3rd_lane"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:visibility="invisible"
            app:srcCompat="@drawable/car" />
    </LinearLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/btm_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="17dp">

        <ImageButton
            android:id="@+id/main_FBTN_left"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/left_img_arrow"
            android:scaleType="centerCrop"
            android:contentDescription="@string/left_arrow_desc"
            android:layout_alignParentStart="true" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/main_FBTN_right"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/right_img_arrow"
            android:scaleType="centerCrop"
            android:contentDescription="@string/right_arrow_desc"
            android:layout_alignParentEnd="true" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/hearts_layout"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_heart1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/heart" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_heart2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/heart" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_heart3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/heart" />
    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>
